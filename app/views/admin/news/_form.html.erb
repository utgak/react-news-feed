<%= form_with(model: [:admin, admin_news]) do |form| %>
  <% if admin_news.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(admin_news.errors.count, "error") %> prohibited this admin_news from being saved:</h2>

      <ul>
        <% admin_news.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :published_at, style: "display: block" %>
    <%= form.datetime_field :published_at %>
  </div>

  <div>
    <%= form.label :hidden, style: "display: block" %>
    <%= form.check_box :hidden %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image, accept: 'image/png,image/jpeg' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
